# Makefile

# Variables
NAME = school
CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
RM = rm -f

# Rules
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $(NAME) $(OBJ)

%.o: %.c
	$(CC) -c $< -o $@

clean:
	$(RM) *~ *# $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

# Phony targets
.PHONY: all clean oclean fclean re
